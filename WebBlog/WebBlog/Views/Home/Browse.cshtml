@model WebBlog.Models.Tag

@{ ViewBag.Title = "Browse Articles"; }

@{Html.RenderAction("SideBarTagsMenu", "Home");}



    <div id="post_list">
        <h2>
            <em>@Model.Name</em> Articles
        </h2>

        @foreach (var article in Model.Articles)
        {
            <div class="post_item">
                <h3>
                    <a class="titlelnk" href="@Url.Action("Details", "PersonalPage", new { authorId = article.AuthorId, articleId = article.ArticleId })">
                        @article.Title
                    </a>
                </h3>
                <p class="post_item_summary">
                    @article.Body
                </p>
                <div class="post_item_foot">
                    <a class="lightblue" href="@Url.Action("Browse", "PersonalPage", new { authorId = article.AuthorId, tagname = "" })">
                        @article.Author.Name
                    </a>Published at @article.PublishTime
                </div>
            </div>
        }
    </div>


